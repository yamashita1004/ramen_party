    <div class="container">
      <div class="row">
        <div class="col-4 mx-auto mb-5 admin-customer-show">

    <%= image_tag @ramen.get_image, size: "200x200" %>
     <p>ユーザー名</p>
     <p> <%= @ramen.user.name%></p>
     <p>店舗名</p>
      <p><%= @ramen.name %></p>
      <p>紹介文</p>
      <p><%= @ramen.introduction %></p>
      <p>住所</p>
      <p><%= @ramen.address %></p>
      <p>ジャンル</p>
      <p><%=  @ramen.genre %></p>
      <p>コメント件数：<%= @ramen.post_comments.count %></p>
      <% @ramen.post_comments.each do |post_comment| %>
        <p><%= image_tag post_comment.user.get_image, size: "100x100" %></p>
        <%= post_comment.user.name %>
        <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>

          <%= link_to "削除",admin_ramen_post_comment_path(post_comment.ramen, post_comment), method: :delete %>

      <% end %>


      <p><%= link_to"全削除", admin_ramen_path(@ramen.id), method: :delete,"data-confirm"=>"Are you sure?",class:"btn btn-danger" %></p>
        </div>
      </div>
    </div>