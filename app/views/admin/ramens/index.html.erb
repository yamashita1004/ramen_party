
<div class="card-list-container py-5">
  <div clss ="main-container">
  <% @ramens.each do |ramen| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to admin_ramen_path(ramen.id) do %>
      <%= image_tag ramen.get_image,   class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag ramen.user.get_image, size: "100x100"   %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(admin_ramen_path(ramen.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= ramen.name %></span></strong>
            <% end %>
          </p>

          <span><i class="fas fa-user"></i> By <%= ramen.user.name %> ｜ </span>
          <span><%= link_to "#{ramen.post_comments.count} コメント", public_ramen_path(ramen.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate  @ramens %>
</div>
</div>