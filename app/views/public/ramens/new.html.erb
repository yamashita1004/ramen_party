<script src="https://kit.fontawesome.com/5426e91a66.js" crossorigin="anonymous"></script>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">新規投稿フォーム</h5>
      <div class="form-body p-4">
        <% if @ramen.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @ramen.errors.count %>件のエラーが発生しました
            </h6>
            <% @ramen.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @ramen, url: public_ramens_path do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-shop"></i></span>
            </div>
            <%= f.text_field :name , class:"form-control", placeholder:"店舗名" %>
              </div>
          <%= f.text_area :introduction, class:"form-control", rows:"3", placeholder:"紹介文はここに" %>
         <div class="input-group mb-3 mt-4">
           <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-sharp fa-solid fa-location-dot"></i></span>
            </div>
           <%= f.text_field :address, class:"form-control", rows:"3", placeholder:"店舗住所" %>
           </div>
            <%= f.select :genre, ['豚骨', 'みそ', '醤油','塩','二郎系','家系','牛骨','つけ麺','中華系'], {include_blank: 'ジャンル'} %>

          <hr>
          <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>