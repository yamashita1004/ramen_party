<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
<h1>Editing user</h1>


<%= form_with model: @user, url: public_user_path(@user.id) do |f|  %>
<h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
<h4>名前</h4>
<%= f.text_field :name %>
<h4>プロフィール</h4>
  <%= f.text_area :introduction %>

<p>
<%= f.submit 'Update ', class: " btn btn-secondary" %>
</p>
<% end %>
<%= link_to "Show",public_user_path(@user.id) %>
 |
 <%= link_to '退会する', public_users_quit_path, class:'btn btn-primary ml-5' %>

</div>
</div>
</div>
